<!DOCTYPE html>
<html>
<head>
  <title>Expense Dashboard</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      text-align: center;
      background-color: #f8f9fa;
      color: #333;
    }

    h1 {
      margin-top: 20px;
      font-size: 2.2rem;
      color: #2c3e50;
    }

    h3 {
      margin-top: 5px;
      color: #555;
    }

    table {
      width: 90%;
      margin: 30px auto;
      border-collapse: collapse;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

    th, td {
      border: 1px solid #ddd;
      padding: 10px;
    }

    th {
      background-color: #3498db;
      color: white;
    }

    td {
      background-color: #fefefe;
    }

    .over-budget {
      color: #e74c3c;
      font-weight: bold;
    }

    .under-budget {
      color: #27ae60;
      font-weight: bold;
    }

    .action-buttons a {
      margin: 0 5px;
      text-decoration: none;
      font-weight: bold;
      color: #3498db;
    }

    .action-buttons a:hover {
      text-decoration: underline;
    }

    .chart-container {
      max-width: 500px;
      margin: 40px auto;
    }

    canvas {
      width: 100% !important;
      height: auto !important;
    }

    .controls {
      margin: 20px auto;
      width: 90%;
      background: #fff;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 0 0 8px rgba(0,0,0,0.1);
    }

    .controls form {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      justify-content: center;
      align-items: center;
      margin-top: 10px;
    }

    .controls input, .controls select {
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    .controls button, .controls a.btn-clear {
      padding: 8px 12px;
      border: none;
      background-color: #2980b9;
      color: white;
      border-radius: 5px;
      cursor: pointer;
      text-decoration: none;
    }

    .controls button:hover, .controls a.btn-clear:hover {
      background-color: #1f6391;
    }

    .btn-download {
      display: inline-block;
      margin-top: 10px;
      background: #2ecc71;
      color: white;
      padding: 10px 15px;
      border-radius: 5px;
      text-decoration: none;
      font-weight: bold;
    }

    .btn-download:hover {
      background-color: #27ae60;
    }

    .footer {
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <h1>üí∏ Expense Dashboard</h1>
  <h3>This Month's Spending: ‚Çπ<%= totalThisMonth %> / ‚Çπ<%= budgetLimit %></h3>

  <div class="controls">
    <!-- Budget Update -->
    <form action="/update-budget" method="POST">
      <label for="budget">Update Monthly Budget: ‚Çπ</label>
      <input type="number" name="budget" value="<%= budgetLimit %>" required />
      <button type="submit">Update</button>
    </form>

    <!-- Filter & Sort -->
    <form method="get" action="/dashboard">
      <select name="category">
        <option value="All" <%= !category || category === 'All' ? 'selected' : '' %>>All Categories</option>
        <option value="Food" <%= category === 'Food' ? 'selected' : '' %>>Food</option>
        <option value="Transport" <%= category === 'Transport' ? 'selected' : '' %>>Transport</option>
        <option value="Utilities" <%= category === 'Utilities' ? 'selected' : '' %>>Utilities</option>
        <option value="Shopping" <%= category === 'Shopping' ? 'selected' : '' %>>Shopping</option>
      </select>

      <input type="date" name="from" value="<%= from || '' %>" />
      <input type="date" name="to" value="<%= to || '' %>" />
      <input type="text" name="search" placeholder="Search title or category" value="<%= search || '' %>" />

      <select name="sort">
        <option value="date_desc" <%= sort === 'date_desc' ? 'selected' : '' %>>Newest</option>
        <option value="date_asc" <%= sort === 'date_asc' ? 'selected' : '' %>>Oldest</option>
        <option value="amount_asc" <%= sort === 'amount_asc' ? 'selected' : '' %>>Amount (Low ‚Üí High)</option>
        <option value="amount_desc" <%= sort === 'amount_desc' ? 'selected' : '' %>>Amount (High ‚Üí Low)</option>
      </select>

      <button type="submit">Apply</button>
      <a href="/dashboard" class="btn-clear">Clear</a>
    </form>

    <a href="/download-csv" class="btn-download">‚¨áÔ∏è Download CSV</a>
  </div>

  <% if (totalThisMonth > budgetLimit) { %>
    <p class="over-budget">‚ö†Ô∏è You've exceeded your monthly budget!</p>
  <% } else { %>
    <p class="under-budget">‚úÖ You're within your budget.</p>
  <% } %>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Amount</th>
        <th>Category</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% expenses.forEach(exp => { %>
        <tr>
          <td><%= exp.title %></td>
          <td>‚Çπ<%= exp.amount %></td>
          <td><%= exp.category %></td>
          <td><%= new Date(exp.date).toLocaleDateString() %></td>
          <td class="action-buttons">
            <a href="/edit-expense/<%= exp._id %>">‚úèÔ∏è Edit</a>
            <a href="/delete-expense/<%= exp._id %>" onclick="return confirm('Are you sure you want to delete this expense?');">üóëÔ∏è Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <br />
  <div class="footer">
    <a href="/add-expense" class="btn-download" style="background: #f39c12;">‚ûï Add More</a>
    &nbsp; | &nbsp;
    <a href="/dashboard" class="btn-clear">üè† Dashboard</a>
    <p style="margin-top: 10px;">
      Logged in as: <strong><%= userEmail %></strong> |
      <a href="/logout" style="color: red; font-weight: bold;">üîì Logout</a>
    </p>
  </div>

  <!-- Chart.js Pie Chart -->
  <h2>üìä Category-Wise Spending</h2>
  <div class="chart-container">
    <canvas id="categoryChart"></canvas>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  const categoryData = <%- JSON.stringify(categoryTotals) %>;
  const ctx = document.getElementById('categoryChart').getContext('2d');
  const labels = Object.keys(categoryData);
  const data = Object.values(categoryData);

  const backgroundColors = [
    '#4CAF50', // Green - Food
    '#2196F3', // Blue - Transport
    '#FF9800', // Orange - Utilities
    '#9C27B0', // Purple - Shopping
    '#F44336', // Red - Entertainment
    '#00BCD4', // Cyan - Misc
    '#FFC107'  // Amber - Other
  ];

  new Chart(ctx, {
    type: 'pie',
    data: {
      labels: labels,
      datasets: [{
        label: 'Spending by Category',
        data: data,
        backgroundColor: backgroundColors.slice(0, labels.length),
        borderColor: '#fff',
        borderWidth: 1
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          position: 'bottom',
          labels: {
            color: '#333',
            font: {
              size: 14
            }
          }
        },
        tooltip: {
          callbacks: {
            label: function(context) {
              const label = context.label || '';
              const value = context.parsed || 0;
              return `${label}: ‚Çπ${value}`;
            }
          }
        }
      }
    }
  });
</script>
</body>
</html>
